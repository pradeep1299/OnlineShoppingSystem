@{
    ViewBag.Title = "Index";
}

<h2>Product Details</h2>
@Html.ActionLink("Add Product", "AddProduct")
@Html.ActionLink("View Category", "CategoryIndex")
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Price
        </th>
        <th>
            Stock
        </th>
        <th>
            Category Name
        </th>
    </tr>
    @foreach (OnlineShoppingSystem_Entity.Product product in ViewBag.Product)
    {
        <tr>
            <td>
                @product.ProductName
            </td>
            <td>
                @product.ProductPrice
            </td>
            <td>
                @product.ProductStock
            </td>
            <td>
                @product.Category.CategoryName
            </td>
            <td>
                @Html.ActionLink("Edit", "EditProduct", new { id = product.ProductId })
                @Html.ActionLink("Delete", "DeleteProduct", new { id = product.ProductId })
            </td>
        </tr>
    }
</table>
