@model OnlineShoppingSystem.Models.ProfileViewModel

@{
    ViewBag.Title = "UpdateDetails";
    Layout = "~/Views/Shared/_OnlineShoppingMaster.cshtml";
}

<h2>UpdateDetails</h2>

<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/jquery.validate.min.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("UpdateDetails", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.CustomerId)
    @Html.HiddenFor(model => model.CustomerPassword)
    @Html.HiddenFor(model => model.Role)

    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.CustomerName)
            </td>
            <td>
                @Html.EditorFor(model => model.CustomerName)
                @Html.ValidationMessageFor(model => model.CustomerName, "", new { @style = "color:red" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.CustomerMobile)
            </td>
            <td>
                @Html.EditorFor(model => model.CustomerMobile)
                @Html.ValidationMessageFor(Model => Model.CustomerMobile, "", new { @style = "color:red" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.CustomerEMail)
            </td>
            <td>
                @Html.EditorFor(model => model.CustomerEMail)
                @Html.ValidationMessageFor(Model => Model.CustomerEMail, "", new { @style = "color:red" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Back", "Index")
            </td>
            <td>
                <input type="submit" value="Update" />
            </td>
        </tr>
    </table>
}